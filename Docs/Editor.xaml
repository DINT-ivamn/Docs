<Window x:Class="Docs.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Docs"
        mc:Ignorable="d"
        Title="Documento" Height="450" Width="800" Closing="Window_Closing">
    <DockPanel>
        <Button x:Name="GuardarButton" DockPanel.Dock="Bottom" Click="GuardarButton_Click" Content="Guardar" Margin="10"/>
        <TextBox x:Name="TextoTextBox" AcceptsReturn="True"/>
    </DockPanel>
</Window>
